{
  "name": "@ugitech/web-template",
  "version": "1.0.3",
  "private": false,
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "tsconfig.json",
    "vue.config.json",
    "babel.config.json",
    "public/",
    "src/styles",
    "src/assets",
    "!src/assets/stories",
    "src/",
    "lib/",
    "types/",
    "scss/"
  ],
  "scripts": {
    "serve": "vue-cli-service serve src/app/main.ts",
    "build:app": "vue-cli-service build src/app/main.ts",
    "build:types": "npm run build:types:tsc && npm run build:types:alias && npm run build:types:colors",
    "build:types:tsc": "tsc -d --emitDeclarationOnly -p tsconfig.types.json",
    "build:types:alias": "node ./build/types/alias.js",
    "build:types:colors": "node ./build/types/colors.js",
    "build:lib": "npm run build:lib:ts && npm run build:lib:babel && npm run build:lib:scss",
    "build:lib:ts": "tsc --outDir lib-temp -p tsconfig.dist.json",
    "build:lib:babel": "cross-env NODE_ENV=lib ./node_modules/.bin/babel lib-temp --out-dir lib",
    "build:lib:scss": "node ./build/lib/scss.js",
    "build:storybook": "build-storybook -s .storybook/public && npm run build:storybook:clean",
    "build:storybook:docs": "build-storybook --docs",
    "build:storybook:clean": "node ./build/storybook/clean.js",
    "lint": "vue-cli-service lint",
    "test": "npm run test:unit",
    "test:unit": "vue-cli-service test:unit",
    "storybook:docs": "start-storybook -p 6006 -s .storybook/public --docs",
    "storybook": "start-storybook -p 6006 -s .storybook/public",
    "azure:storage:upload-batch": "az storage blob upload-batch --account-name $ACCOUNT_NAME --account-key $ACCOUNT_KEY --destination '$web' --source ./storybook-static",
    "azure:storage:delete-batch": "az storage blob delete-batch --account-name $ACCOUNT_NAME --account-key $ACCOUNT_KEY -s '$web'",
    "azure:deploy": "npm run azure:storage:delete-batch && npm run azure:storage:upload-batch",
    "preversion": "npm test"
  },
  "dependencies": {
    "@mdi/font": "^5.0.45",
    "@types/jest": "^25.1.4",
    "core-js": "^3.6.4",
    "moment": "^2.24.0",
    "vue-class-component": "^7.2.2",
    "vue-property-decorator": "^8.3.0"
  },
  "peerDependencies": {
    "vue": "^2.6.11",
    "vuetify": "^2.2.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@storybook/addon-actions": "^5.3.13",
    "@storybook/addon-docs": "^5.3.13",
    "@storybook/addon-links": "^5.3.13",
    "@storybook/addon-storysource": "^5.3.13",
    "@storybook/addon-viewport": "^5.3.14",
    "@storybook/addons": "^5.3.13",
    "@storybook/preset-typescript": "^1.2.0",
    "@storybook/vue": "^5.3.13",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@vue/cli-plugin-babel": "^4.2.0",
    "@vue/cli-plugin-eslint": "^4.2.2",
    "@vue/cli-plugin-typescript": "^4.2.3",
    "@vue/cli-plugin-unit-jest": "^4.2.3",
    "@vue/cli-service": "^4.2.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^5.0.1",
    "@vue/test-utils": "1.0.0-beta.25",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-detective": "^2.0.0",
    "babel-preset-vue": "^2.0.2",
    "cross-env": "^7.0.2",
    "deepmerge": "^4.2.2",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^6.1.2",
    "fibers": "^4.0.2",
    "fork-ts-checker-webpack-plugin": "^4.0.5",
    "jest": "^25.1.0",
    "lint-staged": "^9.5.0",
    "lodash": "^4.17.15",
    "react": "^16.13.0",
    "react-docgen-typescript-loader": "^3.7.1",
    "react-is": "^16.13.0",
    "resolve-url-loader": "^3.1.1",
    "sass": "^1.26.0",
    "sass-loader": "^8.0.2",
    "shelljs": "^0.8.3",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "~3.7.5",
    "vue-cli-plugin-vuetify": "^2.0.5",
    "vue-docgen-loader": "^1.3.0-beta.0",
    "vue-jest": "^3.0.5",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0",
    "webpack-cli": "^3.3.11"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,css,js,jsx,vue}": [
      "vue-cli-service lint",
      "git add",
      "jest --findRelatedTests"
    ]
  }
}
